<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container mt-3">
        <h2>Hello</h2>
        <form action="/home" method="post">
            <div class="mb-3 mt-3">
                <label for="text">User</label>
                <input type="text" class="form-control" id="user" placeholder="Enter user" name="user">
            </div>
            <div class="mb-3">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="psw">
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="remember"> Remember me
                </label>
            </div>
            <% if (typeof data !="undefined" && data) { %>
                <div class="text-danger text-left  mb-3">
                    <%= data %>
                </div>
                <% } %>
                    <button type="submit" class="btn btn-primary">Login</button>

        </form>
        <button onclick="window.location.href='http://localhost:1313/create';" class="btn btn-primary">Create</button>
    </div>
</body>

</html>